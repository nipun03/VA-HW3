{
 "$schema": "https://vega.github.io/schema/vega/v4.json",
 "width": 960,
 "height": 500,
 "autosize": "none",

 "data": [
   {
     "name": "Losses",
     "url": "https://raw.githubusercontent.com/nipun03/VA-HW3/master/data/losses2015_transformed.csv",
     "format": {"type": "csv", "parse": "auto"}
   },
   {
     "name": "states",
     "url": "https://raw.githubusercontent.com/nipun03/VA-HW3/master/data/us-10m.json",
     "format": {"type": "topojson", "feature": "states"},
     "transform": [
       {  "type": "lookup", "from": "Losses", "key": "State_Code", "fields": ["id"], "values": ["Amount", "State_Abv"] },
       { "type": "filter", "expr": "datum.Amount != null" }
      
     ]
   }
 ],

 "projections": [
   {
     "name": "projection",
     "type": "albersUsa"
   }
 ],

 "scales": [
   {
     "name": "color",
     "type": "quantize",
     "domain": [0, 194545],
     "range": {"scheme": "blues", "count": 5}
   }
 ],

 "legends": [
   {
     "fill": "color",
     "orient": "bottom-right",
     "title": "Losses",
     "format": "0.1%"
   }
 ],

 "marks": [
   {
     "type": "shape",
     "from": {"data": "states"},
     "encode": {
       "enter": { "tooltip": {"signal": "format(datum.Amount, '0.1')"}},
       "update": { "fill": {"scale": "color", "field": "Amount, State_Abv"} },
       "hover": { "fill": {"value": "red"} }
     },
     "transform": [
       { "type": "geoshape", "projection": "projection" }
     ]
   }
 ]
}

